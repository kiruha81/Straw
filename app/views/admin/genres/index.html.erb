<div class="container col-12">
  <div class="col-11 ml-5 my-5">
    <h2>ジャンルを追加する</h2>
    <%= bootstrap_form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%#= bootstrap_devise_error_messages! %>
      <%= f.text_field :name, autofocus: true, placeholder: "2～20文字", class: 'form-control' %>
      <%= f.submit %>
    <% end %><br>
    <div class="col-12">
      <div class="row">
        <div class="col-4">
          <h3>ジャンル一覧</h3><hr>
            <% @genres.each do |genre| %>
              <center><%= link_to genre.name, edit_admin_genre_path(genre) %></center><hr>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
