<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>
<div class="container">
  <div class="col-8 ml-5 my-5">
    <h1>ジャンルを追加する</h1>
    <%= bootstrap_form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%#= bootstrap_devise_error_messages! %>
      <%= f.text_field :name, autofocus: true, placeholder: "2～20文字", class: 'form-control' %>
      <%= f.submit %>
    <% end %>
    <h2>ジャンル一覧</h2>
    <% @genres.each do |genre| %>
      <p><%= genre.name %><%#= genre.created_at.strftime('%Y/%m/%d(%a) %R') %>　<%= link_to "編集", edit_admin_genre_path(genre) %></p>
    <% end %>
  </div>
</div>
