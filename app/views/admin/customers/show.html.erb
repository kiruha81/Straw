<h1>Admin::Customers#show</h1>
<p>Find me in app/views/admin/customers/show.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-lg-12 md-5 offset-md-1">
      <h3 style="margin-top: 50px;"><strong>会員詳細</strong></h3>
      <table class="table table-bordered">
        <div class="col" style="margin-top: 50px;">
          <p>
            <strong class="h4"><%= @customer.name %> さんの会員情報詳細</strong>
            <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success", style: "margin-left: 635px;" %>
          </p>
          <div class='col-md-10'>
            <thead>
              <tr class="table">
                  <th style="background-color:#f0f8ff;">会員ID</th>
                <td><%= @customer.id %></td>
              </tr>

              <tr class="table">
                <th style="background-color:#f0f8ff;">ユーザー名</th>
                <td><%= @customer.name %></td>
              </tr>

              <tr class="table">
                <th style="background-color:#f0f8ff;">性別</th>
                <td><%= @customer.gender %></td>
              </tr>

              <tr class="table">
                <th style="background-color:#f0f8ff;">現住</th>
                <td><%= @customer.prefecture %></td>
              </tr>

              <tr class="table">
                <th style="background-color:#f0f8ff;">紹介文</th>
                <td><%= @customer.introduction %></td>
              </tr>

              <tr class="table">
                <th style="background-color:#f0f8ff;">メールアドレス</th>
                <td><%= @customer.email%></td>
              </tr>

              <tr class="table">
                <th style="background-color:#f0f8ff;">会員ステータス</th>
                <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
              </tr>
            <thead>
          </div>
        </div>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
  <div class="col-10 ml-5 my-5">
    <strong class="h4"><%= @customer.name %> さんの投稿</strong>
    <% @shops.each do |shop| %>
          <table class="table table-bordered">
        <!--<thead style="background-color: #f0f8ff;">-->
          <!--<tr>-->
            <tr><th>題名</th><td><%= link_to shop.title, admin_shop_path(shop), class: "text-dark" %></td></tr>
            <tr><th>写真</th><td><% shop.shop_images.each do |shop_image| %>
            <%= image_tag shop_image, size:"400x400" %>
            <% end %></td></tr>
            <tr><th>店名</th><td><%= shop.shop_name %></td></tr>
            <tr><th>住所</th><td><%= shop.map.address %></td></tr>
            <tr><th>本文</th><td><%= shop.body %></td></tr>
          <!--</tr>-->
        <!--</thead>-->
        <!--<tbody>-->

            <!--<tr>-->
              <tr></tr>
              <tr></tr>
              <tr></tr>
              <tr></tr>
              <tr></tr>
            <!--</tr>-->
            <% end %>
        <!--</tbody>-->
      </table>
      <%= paginate @shops %>
  </div>
  </div>
</div>
