<div class="container my-5">
  <div class="row no-gutters">
      <div class="col-lg-12">
        <h3><strong><%= @customer.name %>さんの会員情報編集</strong></h3>
      <%#= render 'layouts/errors', obj: @customer %>
      <%= bootstrap_form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
        <div>
          <div class="col-xs-12">
            <%= f.text_field :name, class: "col-sm-3", style: "margin: 10px;", placeholder: "令和" %>
          </div>
          <div class="col-xs-12">
            <%= f.text_field :gender, class: "col-sm-2", style: "margin: 10px;", placeholder: "0000000" %>
          </div>
          <div class="col-xs-12">
            <%= f.text_field :prefecture, class: "col-sm-3", style: "margin: 10px;", placeholder: "00000000000" %>
          </div>
          <div class="col-xs-12">
            <%= f.text_field :introduction, class: "col-sm-8", style: "margin: 10px;", placeholder: "東京都渋谷区代々木神園町0-0" %>
          </div>
          <div class="col-xs-12">
            <%= f.email_field :email, autocomplete: "email", class: "col-sm-6", style: "margin: 10px;", placeholder: "example@example.com" %>
          </div>
          <div class="col-xs-12">
            <%= f.label "会員ステータス" %><br>
          　<%= f.radio_button_without_bootstrap :is_deleted, :false %> 有効
          　<%= f.radio_button_without_bootstrap :is_deleted, :true %> 退会
          </div>
        </div>

        <div>
          <p>
            <%= f.submit "編集内容を保存", class: "btn btn-success col-sm-3", style: "margin: 10px;" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>