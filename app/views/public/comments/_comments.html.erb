<table>
  <tbody>
    <td><%= "#{shop.comments.count} 件のコメント" %></td>
    <% shop.comments.each do |comment| %>
    <tr>
      <td><%= link_to(shop.customer) do %>
        <%= image_tag comment.customer.get_profile_image(50, 50) %><br>
        <div class='text-dark'><%= comment.customer.name %></div>
        <% end %>
      </td>
      <td><%= comment.title %></td>
      <td><%= comment.comment %></td>
      <td><%= comment.created_at.strftime('%Y/%m/%d(%a) %R') %></td>
        <% if comment.customer == current_customer %>
          <td><%= link_to '削除', shop_comment_path(shop, comment), method: :delete, data: { confirm: '本当に消します？' }, class: "btn btn-sm btn-danger", remote: true %></td>
        <% end %>
    <% end %>
    </tr>
  </tbody>
</table>