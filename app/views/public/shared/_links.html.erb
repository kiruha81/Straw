<div class="form-group">
  <%- if controller_name != 'sessions' %>
    <br /><%= link_to t(".sign_in"), new_session_path(resource_name), class: 'btn btn-outline-secondary btn-sm' %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <br /><%= link_to t(".sign_up"), new_registration_path(resource_name), class: 'btn btn-outline-success btn-sm' %><br />
  <% end -%>
</div>
