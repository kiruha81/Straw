<div class="container-login">
  <div class="col-8 ml-5 my-5">

    <h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_form_with model: @customer, url: customer_registration_path, method: :patch do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <!--<div class="form-group">-->
        <%#= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder: "2～20文字", class: 'form-control' %>
      <!--</div>-->

      <!--<div class="form-group">-->
        <%#= f.label :gender %>
        <%= f.select :gender, Customer.genders.keys.to_a, {prompt: "性別"}, class: 'form-control' %>
      <!--</div>-->

      <!--<div class="form-group">-->
        <%#= f.label :prefecture %>
        <%= f.select :prefecture, Customer.prefectures.keys.to_a, {prompt: "都道府県を選択"}, class: 'form-control' %>
      <!--</div>-->

      <!--<div class="form-group">-->
        <%#= f.label :introduction %>
        <%= f.text_area :introduction, placeholder: "こんにちは", class: 'form-control' %>
      <!--</div>-->

      <!--<div class="form-group">-->
        <%#= f.label :profile_image %>
        <%#= f.file_field :profile_image, accept: "image/*", class: 'file-style', "data-buttonText": "ファイル選択" %>
      <!--</div>-->
      <%#= f.label :profile_image %>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <%= image_tag current_customer.get_profile_image(100, 100) %>
        <small class="form-text text-muted">現在のプロフィール画像</small>
      <br>
      <!--<div class="form-group">-->
        <%#= f.label :email %>
        <%= f.email_field :email, placeholder: "example@example.com", autocomplete: 'email', class: 'form-control' %>
      <!--</div>-->

      <!--ここでパスワードを変更する場合のみ記入-->
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field_without_bootstrap :password, placeholder: "", autocomplete: 'current-password', class: 'form-control' %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('public.shared.minimum_password_length', count: @minimum_password_length) %>変更しない場合は入力しないでください</small>
        <% end %>
      </div>

      <!--<div class="form-group">-->
        <%#= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
      <!--</div>-->
      <!--<div class="form-group">-->
        <%= f.submit t('.update'), class: 'btn btn-primary' %>　　<%= link_to t('.back'), :back, class: 'btn btn-outline-secondary btn-sm' %>
      <!--</div>-->
    <% end %>

    <!--アカウントは論理削除します-->
    <%#= t('.unhappy') %> <%#= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>

  </div>
</div>
